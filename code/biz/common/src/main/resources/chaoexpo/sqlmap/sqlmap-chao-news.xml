<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="ChaoUserFollow">
	<typeAlias alias="TA-ChaoNews" type="com.doucome.chaoexpo.biz.dal.dataobject.ChaoNewsDO" />

	<resultMap id="RM-ChaoNews" class="TA-ChaoNews">
		<result property="id" column="ID" />
		<result property="title" column="TITLE" jdbcType="VARCHAR"/>
		<result property="summary" column="SUMMARY" jdbcType="VARCHAR"/>
		<result property="summaryPictures" column="SUMMARY_PICTURES" jdbcType="VARCHAR"/>
		<result property="detailPictures" column="DETAIL_PICTURES" jdbcType="VARCHAR"/>
		<result property="sourceUrl" column="SOURCE_URL" jdbcType="VARCHAR" />
		<result property=categoryId column="CATEGORY_ID"/>
		<result property="displayOrder" column="DISPLAY_ORDER" jdbcType="VARCHAR"/>
		<result property="gmtPublish" column="GMT_PUBLISH" jdbcType="TIMESTAMP"/>
		<result property="gmtModified" column="GMT_MODIFIED"  jdbcType="TIMESTAMP"/>
		<result property="gmtCreate" column="GMT_CREATE" jdbcType="TIMESTAMP"/>
	</resultMap>

	<insert id="insertNews">
		INSERT INTO CHAO_NEWS
		  (TITLE,SUMMARY,SUMMARY_PICTURES,DETAIL_PICTURES,SOURCE_URL,CATEGORY_ID,DISPLAY_ORDER,GMT_PUBLISH,GMT_MODIFIED,GMT_CREATE)
		VALUES
			(#title#,#summary#,#summaryPictures#,#detailPictures#,#sourceUrl#,#categoryId#,#displayOrder#,#gmtPublish#,now(),now())
		<selectKey resultClass="java.lang.Long" keyProperty="id">
   			<![CDATA[
			SELECT LAST_INSERT_ID() AS ID
			]]>
	    </selectKey>
	</insert>
	
	<sql id="news_fields">
	    TITLE,SUMMARY,SUMMARY_PICTURES,DETAIL_PICTURES,SOURCE_URL,CATEGORY_ID,DISPLAY_ORDER,GMT_PUBLISH,GMT_MODIFIED,GMT_CREATE
	</sql>
	
	<select id="queryNews" resultMap="RM-ChaoNews">
		SELECT <include refid="news_fields" />
		  FROM CHAO_NEWS
		  WHERE ID = #id#
    </select>
	
	<select id="queryNewsPage" resultMap="RM-ChaoNews">
		SELECT <include refid="news_fields" />
		  FROM CHAO_NEWS
		  <isParameterPresent open="WHERE" removeFirstPrepend="true">
	    	  <isNotNull property="categoryId" prepend="AND">
	    		  CATEGORY_ID = #categoryId# 
			  </isNotNull>
			  <isNotNull property="gmtPublishStart" prepend="AND">
	    		  GMT_PUBLISH <![CDATA[>=]]> #gmtPublishStart# 
			  </isNotNull>
			  <isNotNull property="gmtPublishEnd" prepend="AND">
	    		  GMT_PUBLISH <![CDATA[<]]> #gmtPublishEnd# 
			  </isNotNull>
		  </isParameterPresent>
		  <isNotEmpty property="orderColumn" prepend="">
		      ORDER BY #GMT_CREATE#
		  </isNotEmpty>
		  <isEmpty property="orderColumn" prepend="">
		      ORDER BY GMT_CREATE
		  </isEmpty>
		  <isEqual property="order" compareValue="desc" prepend=" ">
		      DESC
		  </isNotEmpty>
	      LIMIT #start#, #size#
	</select>
	
	
	<select id="countNews" resultClass="java.lang.Integer">
		SELECT COUNT(ID)
		  FROM CHAO_NEWS
		  <isParameterPresent open="WHERE" removeFirstPrepend="true">
	    	  <isNotNull property="categoryId" prepend="AND">
	    		  CATEGORY_ID = #categoryId# 
			  </isNotNull>
			  <isNotNull property="gmtPublishStart" prepend="AND">
	    		  GMT_PUBLISH <![CDATA[>=]]> #gmtPublishStart# 
			  </isNotNull>
			  <isNotNull property="gmtPublishEnd" prepend="AND">
	    		  GMT_PUBLISH <![CDATA[<]]> #gmtPublishEnd# 
			  </isNotNull>
		  </isParameterPresent>
	</select>
	
	<update id="updateNews">
	    UPDATE CHAO_NEWS
	      SET 
	        <isNotEmpty property="title" prepend="">
	            TITLE = #title#,
	        </isNotEmpty>
	        <isNotEmpty property="summary" prepend="">
	            SUMMARY = #summary#,
	        </isNotEmpty>
	        <isNotEmpty property="summaryPictures" prepend="">
	            SUMMARY_PICTURES = #summaryPictures#,
	        </isNotEmpty>
	        <isNotEmpty property="detailPictures" prepend="">
	            DETAIL_PICTURES = #detailPictures#,
	        </isNotEmpty>
	        <isNotEmpty property="sourceUrl" prepend="">
	            SOURCE_URL = #sourceUrl#,
	        </isNotEmpty>
	        <isNotEmpty property="categoryId" prepend="">
	            CATEGORY_ID = #categoryId#,
	        </isNotEmpty>
	        <isNotEmpty property="gmtPublish" prepend="">
	            GMT_PUBLISH = #gmtPublish#,
	        </isNotEmpty>
	        GMT_MODIFIED = NOW()
	      WHERE ID = #ID#
	</update>
	
</sqlMap>