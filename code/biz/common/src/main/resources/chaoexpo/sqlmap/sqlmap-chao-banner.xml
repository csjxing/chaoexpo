<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="ChaoBanner">
	<typeAlias alias="TA-ChaoBanner"
		type="com.doucome.chaoexpo.biz.dal.dataobject.ChaoBannerDO" />

	<resultMap id="RM-ChaoBanner" class="TA-ChaoBanner">
		<result property="id" column="ID" />
		<result property="bannerId" column="BANNER_ID"/>
		<result property="status" column="STATUS"/>
		<result property="gmtCreate" column="GMT_CREATE"/>
		<result property="gmtModified" column="GMT_MODIFIED" />
	</resultMap>

	<insert id="insertBanner">
		INSERT INTO
			CHAO_BANNER(ID,BANNER_ID,STATUS,GMT_CREATE,GMT_MODIFIED)
		VALUES
			(#id#,#bannerId#,#status#,now(),now())
		<selectKey resultClass="java.lang.Long" keyProperty="id">
   			<![CDATA[
			SELECT LAST_INSERT_ID() AS ID
			]]>
	    </selectKey>
	</insert>
	
	<select id="queryIntro" resultMap="RM-ChaoIntro">
		SELECT 
			ID,HN_MAP_PIC_URLS,HN_INTRO,HN_INDUSTRIAL,CHAO_EXPO_INTRO,GMT_CREATE,GMT_MODIFIED
		FROM
			CHAO_INTRO
		LIMIT 1
	</select>
	
	<update id="updateIntro">
		UPDATE
			CHAO_INTRO
		SET
			<isNotEmpty property="hnMapPicUrls">
				HN_MAP_PIC_URLS = #hnMapPicUrls# ,
			</isNotEmpty>
			<isNotEmpty property="hnIntro">
				HN_INTRO = #hnIntro# ,
			</isNotEmpty>
			<isNotEmpty property="chaoExpoIntro">
				CHAO_EXPO_INTRO = #chaoExpoIntro# ,
			</isNotEmpty>
			<isNotEmpty property="hnIndustrial">
				HN_INDUSTRIAL = #hnIndustrial# ,
			</isNotEmpty>
			GMT_MODIFIED = now()
	</update>
	
</sqlMap>