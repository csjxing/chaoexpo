#set($bopsCss=["subject.css"])
#set($layout="bops/default_bops.vm")
#set($navigation = "新增专题")

<input type="hidden"  id="bopsRoot" value="${env.bopsRoot}"/>
<input type="hidden"  id="bopsPage" value="subject"/>
<input type="hidden"  id="pictureRoot" value="${env.pictureRoot}"/>

<div class="bops">
    <div class="main-box">
    	<div id="pictureUploadLayer" class="pic-upload-layer dd-hide">
		    <div class="wrap">
			    <div class="header" style="">
				    <span>上传图片</span>
					<a class="close-btn" href="javascript:;"></a>
				</div>
				<div class="content">
					<div class="url-pic" style="">
					    <div class="tip"><span>网络图片上传</span></div>
					    <div class="tip"><span class="error"></span></div>
						<input class="picture-url" type="text" name="pictureUrl"/>
						<input class="confirm-btn" type="button" value="确定"/>
					</div>
				</div>
			</div>
		</div>
    	<form id="subjectForm" method="post" action="${env.bopsRoot}/bops/add_subject.htm">
    		<input type="hidden" name="id" value="$!subject.id" />
		    <div class="subject-box">
			    <div class="pic-box">
				    <div class="top-box">
					    <div class="picture dd-l">
					    	#if ($!subject.picUrlList && $!subject.picUrlList.size() > 0)
					    		<img src="${env.pictureRoot}$!subject.picUrlList[0]" />
						    #end
						</div>
						<ul class="dd-l"><li style="width: 40px;"></li></ul>
					</div>
					<div class="sum-pics">
						<div class="nav"><span>专题图片：</span></div>
					    <ul>
							#if(!$collectionUtils.isEmpty($subject.picUrlList))
								#foreach($picModel in $subject.picModelList)
							        <li>
							        	<a href="javascript:;"><img src="$!picModel.getSum('80x80')"/></a>
							        	<input type="hidden" name="picUrlList" value="$picUrl"/>
							        </li>
							    #end
							#end
							<li class="add-pic"><a class="add-pic-btn btn" href="java.javascript:;" title="新增图片"></a></li>
						</ul>
					</div>
				</div>
				<div class="content-box" style="">
				    <ul class="prop-list">
						<li class="">
							<span class="lbl" style="">名称：</span>
							<div class="dd-l">
								<input class="name width3" type="text" name="name" value="$!subject.name"/>
							</div>
						</li>
						<li class="">
							<span class="lbl" style="">网页地址：</span>
							<div class="dd-l">
								<input class="webUrl width3" type="text" name="webUrl" value="$!subject.webUrl"/>
							</div>
						</li>
					</ul>
					<div class="btn-box">
						<input type="submit" value="提交"/>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>

#set($bopsJs=["../../js/lib/jquery.validate.min.js", "subject.js"])
