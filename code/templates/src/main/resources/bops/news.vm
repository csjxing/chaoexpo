#set($bopsCss=["news.css"])
#set($layout="bops/default_bops.vm")
#set($navigation = "新增新闻")

<input type="hidden"  id="bopsRoot" value="${env.bopsRoot}"/>
<input type="hidden"  id="bopsPage" value="news"/>
<input type="hidden"  id="pictureRoot" value="${env.pictureRoot}"/>

<div class="bops">
    <div class="main-box">
    	<div id="pictureUploadLayer" class="pic-upload-layer dd-hide">
		    <div class="wrap">
			    <div class="header" style="">
				    <span>上传图片</span>
					<a class="colse-btn" href="javascript:;"></a>
				</div>
				<div class="content">
					<div class="url-pic" style="">
					    <div class="tip"><span>网络图片上传</span></div>
					    <div class="tip"><span class="error"></span></div>
						<input class="picture-url" type="text" name="pictureUrl"/>
						<input class="confirm-btn" type="button" value="确定"/>
					</div>
				</div>
			</div>
		</div>
    	<form id="newsForm" method="post" action="${env.bopsRoot}/bops/add_news.htm">
    		<intput type="hidden" name="id" value="$!news.id">
		    <div class="news-box">
			    <div class="pic-box">
				    <div class="top-box dd-l">
					    <div class="picture dd-l">
					    	#if ($!news.picUrlList && $!news.picUrlList.size() > 0)
						        <img src="${env.pictureRoot}$news.summaryPicUrlList[0]" alt="新闻图片"/>
						    #end
						</div>
					    <ul class="right-pics pictures dd-l">
							<li></li>
						</ul>
					</div>
					<div class="bottom-box dd-l">
						<ul class="bottom-pics pictures dd-l">
							#if($!news.picUrlList && $!news.picUrlList.size() > 0)
								#foreach($picUrl in $news.picUrlList)
							        <li class="#if($velocityCount == 1)active#end">
							        	<a class="small-picture" href="javascript:;">
							        	    <img src="${env.pictureRoot}$picUrl" width="40" height="40"/>
							        	</a>
							        	<input type="hidden" name="picUrlList" value="$picUrl"/>
							        </li>
							    #end
							#end
							<li class=""><a class="add-pic-btn btn" href="javascript:;" title="新增活动图片"></a></li>
						</ul>
					</div>
				</div>
				<div class="content-box" style="">
				    <ul>
						<li class="">
							<span class="lbl" style="">名称：</span>
							<div class="dd-l">
								<input type="text" class="name width3" name="title" value="$!news.title"/>
							</div>
						</li>
						<li class="">
						    <div class="left-div dd-l">
								<span class="lbl">分类：</span>
								<div class="dd-l">
									<select name="categoryId" data-category-id="$!news.categoryId">
									</select>
								</div>
							</div>
							<div>
								<span class="lbl" style="">发布时间：</span>
								<div class="dd-l">
									<input class="dateIpt" type="text" name="gmtPublish" value="$!news.gmtPublish" onfocus="WdatePicker({dateFmt:'yyyy-MM-dd'})"/>
								</div>
							</div>
						</li>
						<li class="">
							<div class="left-div dd-l">
								<span class="lbl">来源：</span>
								<div class="dd-l">
									<input type="text" name="source" value="$!news.source"/>
								</div>
							</div>
							<div>
								<span class="lbl" style="">是否置顶：</span>
								<div class="dd-l">
									<select name="isTop">
										<option value="N" selected>否</option>
										<option value="Y" #if($!news.isTop == 'Y')selected#end>是</option>
									</select>
								</div>
							</div>
						</li>
						<li class="">
							<span class="lbl">正文：</span>
							<div class="dd-l">
								<textarea name="content"/>$!news.content</textarea>
							</div>
						</li>
						<li class="dd-l">
							<input type="submit" value="提交"/>
						</li>
					</ul>
				</div>
			</div>
		</form>
	</div>
</div>

#set($bopsJs=["../../js/lib/jquery.validate.min.js", "news.js"])
