<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="ChaoNews">
	<typeAlias alias="TA-ChaoNews"
		type="com.doucome.chaoexpo.biz.dal.dataobject.ChaoNewsDO" />

	<resultMap id="RM-ChaoNews" class="TA-ChaoNews">
		<result property="id" column="ID" />
		<result property="title" column="TITLE" />
		<result property="picUrls" column="PIC_URLS"/>
		<result property="content" column="CONTENT"/>
		<result property="categoryId" column="CATEGORY_ID"/>
		<result property="displayOrder" column="DISPLAY_ORDER"/>
		<result property="source" column="SOURCE"/>
		<result property="gmtPublish" column="GMT_PUBLISH"/>		
		<result property="gmtCreate" column="GMT_CREATE"/>
		<result property="gmtModified" column="GMT_MODIFIED" />
	</resultMap>
	
	<sql id="chao_news_fields">
		ID,TITLE,PIC_URLS,CONTENT,CATEGORY_ID,DISPLAY_ORDER,SOURCE,GMT_PUBLISH,GMT_CREATE,GMT_MODIFIED
	</sql>

	<insert id="insertNews">
		INSERT INTO
			CHAO_NEWS(ID,TITLE,PIC_URLS,CONTENT,CATEGORY_ID,DISPLAY_ORDER,SOURCE,GMT_PUBLISH,GMT_CREATE,GMT_MODIFIED)
		VALUES
			(#id#,#title#,#picUrls#,#content#,#categoryId#,#displayOrder#,#source#,#gmtPublish#,now(),now())
		<selectKey resultClass="java.lang.Long" keyProperty="id">
   			<![CDATA[
			SELECT LAST_INSERT_ID() AS ID
			]]>
	    </selectKey>
	</insert>
	
	<select id="queryNewsById" resultMap="RM-ChaoNews">
		SELECT 
			<include refid="chao_news_fields"/>
		FROM
			CHAO_NEWS
		WHERE
			ID = #id#
	</select>
	
	<select id="queryNewsSummarysWithPagination" resultMap="RM-ChaoNews-Summary">
		SELECT 
			<include refid="chao_news_fields"/>
		FROM
			CHAO_NEWS
		<isParameterPresent open="WHERE" removeFirstPrepend="true">
	    	
		</isParameterPresent>
		ORDER BY 
	    	IS_TOP DESC , 
	    	DISPLAY_ORDER DESC
	    LIMIT 
	    	#start#, #size#
	</select>
	
	<select id="countNewsSummarysWithPagination" resultClass="java.lang.Integer">
		SELECT 
			COUNT(ID)
		FROM
			CHAO_NEWS
		<isParameterPresent open="WHERE" removeFirstPrepend="true">
	    	
		</isParameterPresent>
	</select>
	
	<select id="queryNewsPage" resultMap="RM-ChaoNews">
		SELECT <include refid="chao_news_fields" />
		  FROM CHAO_NEWS
		  <isParameterPresent open="WHERE" removeFirstPrepend="true">
	    	  <isNotNull property="categoryId" prepend="AND">
	    		  CATEGORY_ID = #categoryId# 
			  </isNotNull>
			  <isNotNull property="gmtPublishStart" prepend="AND">
	    		  GMT_PUBLISH <![CDATA[>=]]> #gmtPublishStart# 
			  </isNotNull>
			  <isNotNull property="gmtPublishEnd" prepend="AND">
	    		  GMT_PUBLISH <![CDATA[<]]> #gmtPublishEnd# 
			  </isNotNull>
		  </isParameterPresent>
		  <isNotEmpty property="orderColumn" prepend="">
		      ORDER BY #GMT_CREATE#
		  </isNotEmpty>
		  <isEmpty property="orderColumn" prepend="">
		      ORDER BY GMT_CREATE
		  </isEmpty>
		  <isEqual property="order" compareValue="desc" prepend=" ">
		      DESC
		  </isEqual>
	      LIMIT #start#, #size#
	</select>
	
	<select id="countNews" resultClass="java.lang.Integer">
		SELECT COUNT(ID)
		  FROM CHAO_NEWS
		  <isParameterPresent open="WHERE" removeFirstPrepend="true">
	    	  <isNotNull property="categoryId" prepend="AND">
	    		  CATEGORY_ID = #categoryId# 
			  </isNotNull>
			  <isNotNull property="gmtPublishStart" prepend="AND">
	    		  GMT_PUBLISH <![CDATA[>=]]> #gmtPublishStart# 
			  </isNotNull>
			  <isNotNull property="gmtPublishEnd" prepend="AND">
	    		  GMT_PUBLISH <![CDATA[<]]> #gmtPublishEnd# 
			  </isNotNull>
		  </isParameterPresent>
	</select>
	
	<update id="updateNews">
		UPDATE
			CHAO_NEWS
		SET
			<isNotEmpty property="title">
				TITLE = #title# ,
			</isNotEmpty>
			<isNotEmpty property="picUrls">
				PIC_URLS = #picUrls# ,
			</isNotEmpty>
			<isNotEmpty property="content">
				CONTENT = #content# ,
			</isNotEmpty>
			<isNotEmpty property="categoryId">
				CATEGORY_ID = #categoryId# ,
			</isNotEmpty>
			<isNotEmpty property="displayOrder">
				DISPLAY_ORDER = #displayOrder# ,
			</isNotEmpty>
			<isNotEmpty property="isTop">
				IS_TOP = #isTop# ,
			</isNotEmpty>
			<isNotEmpty property="source">
				SOURCE = #source# ,
			</isNotEmpty>
			GMT_MODIFIED = now()
		WHERE
			ID = #id#
	</update>	
	
	
	<update id="updateNewsById">
		UPDATE
			CHAO_NEWS
		SET
			<isNotEmpty property="title">
				TITLE = #title# ,
			</isNotEmpty>
			<isNotEmpty property="picUrls">
				PIC_URLS = #picUrls# ,
			</isNotEmpty>
			<isNotEmpty property="content">
				CONTENT = #content# ,
			</isNotEmpty>
			<isNotEmpty property="categoryId">
				CATEGORY_ID = #categoryId# ,
			</isNotEmpty>
			<isNotEmpty property="displayOrder">
				DISPLAY_ORDER = #displayOrder# ,
			</isNotEmpty>
			<isNotEmpty property="isTop">
				IS_TOP = #isTop# ,
			</isNotEmpty>
			<isNotEmpty property="source">
				SOURCE = #source# ,
			</isNotEmpty>
			GMT_MODIFIED = now()
		WHERE
			ID = #id#
	</update>	

</sqlMap>